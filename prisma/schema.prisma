generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id
  avatar_url      String
  country_code    String
  default_group   String
  is_active       Boolean
  is_bot          Boolean
  is_deleted      Boolean
  is_online       Boolean
  is_supporter    Boolean
  last_visit      DateTime?
  pm_friends_only Boolean
  profile_colour  String?
  username        String
  Message         Message[]
}

model Message {
  message_id BigInt      @id
  content    String
  is_action  Boolean
  channel_id Int
  timestamp  DateTime
  type       String
  sender_id  Int
  sender     User     @relation(fields: [sender_id], references: [id])
}

model Tokens {
  access_token  String @id
  refresh_token String
  expires_in    Int
  token_type    String
}

model Updates {
  last_id BigInt @id
}
